[alias]
aa = add -A
abort = rebase --abort
staged = diff --cached
amend = commit --amend
co = checkout
br = branch
cont = rebase --continue
ci = commit
save = !git add -A && git commit -m 'SAVEPOINT'
st = status
cbr = checkout -b
dbr = branch -D
ps = push
pl = pull
prune-all = !git remote | xargs -n 1 git remote prune
hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %Cblue[%an]%Creset' --abbrev-commit --date=relative
undo = reset --soft HEAD~1
unstage = reset .

[core]
	editor = code --wait
	excludesfile = ~/.gitignore_global
